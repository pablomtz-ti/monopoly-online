{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "python39"
          ]
        },
        "install": {
          "cmds": [
            "pip install -r requirement.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && daphne -b 0.0.0.0 -p $PORT webapps.asgi:channel_layer",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}